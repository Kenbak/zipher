{
  "manifest_version": 3,
  "name": "Ziphers - Zcash Wallet (Testnet)",
  "version": "0.1.0",
  "description": "Privacy-first Zcash wallet by CipherScan. Non-custodial, secure, testnet-only.",
  "author": "CipherScan Team",
  "homepage_url": "https://cipherscan.app",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Ziphers - Zcash Wallet"
  },

  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },

  "permissions": [
    "storage",
    "alarms"
  ],

  "host_permissions": [
    "https://zcash-testnet.chainsafe.dev/*",
    "https://testnet.cipherscan.app/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "lib/webzjs-wallet/*",
        "lib/webzjs-wallet/snippets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
